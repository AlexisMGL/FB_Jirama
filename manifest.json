{
  "manifest_version": 3,
  "name": "Jirama FB Notifier",
  "version": "1.1.0",
  "description": "Alerte quand un post de délestage (JIRAMA) est détecté sur Facebook.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["notifications", "storage"],
  "host_permissions": ["https://www.facebook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
